{
  "name": "side-effect-scanner-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive examples test"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec nano-staged"
  },
  "nano-staged": {
    "*.{md,mdx,json,css,less,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "biome check --write --no-errors-on-unmatched",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "nano-staged": "^0.8.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",

    "@biomejs/biome": "2.0.0",
    "@changesets/cli": "^2.29.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.14.0"
  }
}