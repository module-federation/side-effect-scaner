{
	"compilerOptions": {
		"baseUrl": "src",
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": false,
		"target": "es6",
		"skipLibCheck": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"declaration": true,
		"allowJs": true,
		"paths": {
			"@/*": ["./*"]
		},
		"lib": ["ES6"]
	},
	"include": ["src", "global.d.ts"]
}
